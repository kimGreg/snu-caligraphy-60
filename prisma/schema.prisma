generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Artwork {
  id          Int      @id @default(autoincrement())
  title       String
  writer      String
  writerDept  String   @default("")
  writerBio   String   @default("")
  style       String   @default("")
  body        String   @default("")
  source      String   @default("")
  description String
  category    String
  imageStyle  String @default("portrait")
  order       Int    @default(1)
  prevWork    Int?
  nextWork    Int?
}

model Image {
  id          Int      @id @default(autoincrement())
}